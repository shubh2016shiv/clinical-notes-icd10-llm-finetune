# =============================================================================
# LLM Provider Configuration
# =============================================================================
# Choose which LLM provider to use: 'gemini' or 'openai'
LLM_PROVIDER=openai

# -----------------------------------------------------------------------------
# Gemini Configuration (Google AI)
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# Dataset Paths
# =============================================================================
ICD10_DATASET_PATH=clinical_note_generation/data/icd10_dataset.json
ICD10_SPECIFICITY_PATH=clinical_note_generation/data/icd10_specificity.json

# =============================================================================
# Generation Settings
# =============================================================================
MIN_CODES_PER_NOTE=2
MAX_CODES_PER_NOTE=5
MAX_RETRIES=3
RATE_LIMIT_DELAY=0.5

# =============================================================================
# Validation Settings
# =============================================================================
ENABLE_VALIDATION=true
CONFIDENCE_THRESHOLD=70.0
VALIDATION_TIMEOUT=30.0

# =============================================================================
# Output Settings
# =============================================================================
OUTPUT_DIRECTORY=generated_clinical_notes
