# ==============================================================================
# Clinical Note Generation Configuration
# ==============================================================================
# Author: Shubham Singh
# Usage: Copy this file to .env and fill in your API keys

# -----------------------------------------------------------------------------
# LLM Provider Configuration
# -----------------------------------------------------------------------------
# Which LLM provider to use: 'gemini' or 'openai'
LLM_PROVIDER=gemini

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Rate limiting (seconds between API calls)
RATE_LIMIT_DELAY=0.5
MAX_RETRIES=3

# -----------------------------------------------------------------------------
# ICD-10 Dataset Configuration
# -----------------------------------------------------------------------------
# Path to ICD-10 dataset JSON file (relative to project root)
ICD10_DATASET_PATH=clinical_note_generation/data/icd10_dataset.json
ICD10_SPECIFICITY_PATH=clinical_note_generation/data/icd10_specificity.json

# Use local dataset only (no online API calls)
USE_API_FOR_CODES=false

# -----------------------------------------------------------------------------
# Generation Configuration
# -----------------------------------------------------------------------------
# Number of ICD-10 codes per note
MIN_CODES_PER_NOTE=2
MAX_CODES_PER_NOTE=5

# Output directory for generated notes
OUTPUT_DIRECTORY=generated_clinical_notes

# -----------------------------------------------------------------------------
# Validation Configuration
# -----------------------------------------------------------------------------
ENABLE_VALIDATION=true
VALIDATION_CONFIDENCE_THRESHOLD=85.0

# -----------------------------------------------------------------------------
# Data Extraction (Original Project Settings)
# -----------------------------------------------------------------------------
DATA_SOURCE=local_csv
LOCAL_DATA_PATH=./data/raw/mimic-iv
OUTPUT_DIRECTORY=./data/extracted

# -----------------------------------------------------------------------------
# Model & Training
# -----------------------------------------------------------------------------
MODEL_NAME=BioMistral/BioMistral-7B
CACHE_DIR=./.cache

# -----------------------------------------------------------------------------
# Weights & Biases
# -----------------------------------------------------------------------------
WANDB_PROJECT=icd10-classification
WANDB_ENTITY=
WANDB_ENABLED=true

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# -----------------------------------------------------------------------------
# Data Processing
# -----------------------------------------------------------------------------
MIN_TEXT_LENGTH=10
MAX_TEXT_LENGTH=2048
RANDOM_SEED=42
